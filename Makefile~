name=trillium-python

all: ${name}.pdf

handout: ${name}_handout.pdf

${name}.pdf: ${name}.md style.theme
	./mds -vv $<

${name}_handout.pdf: ${name}_handout.md ${name}_handout.theme
	./mds -vv $<

${name}_handout.md: ${name}.md
	cp ${name}.md ${name}_handout.md

clean:
	\rm -rf ${name}.pdf ${name}_handout.md ${name}_handout.pdf ${name}.tex ${name}_handout.tex
